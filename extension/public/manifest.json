{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Easy Notes",
  "action": {
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts" : [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],

  "permissions": ["sidePanel", "scripting","activeTab", "tabs","downloads"],
  "host_permissions": ["<all_urls>"]
}