{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Easy Notes",
  "action": {
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["sidePanel"],
  "host_permissions": ["<all_urls>"]
}